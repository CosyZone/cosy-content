{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": false,
        "baseUrl": ".",
        "jsx": "preserve",
        "jsxImportSource": "astro",
        "allowJs": true,
        "types": [
            "astro/client"
        ],
        "sourceMap": true,
        "module": "esnext",
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "include": [
        "src/**/*",
        ".astro/types.d.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}