{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": false,
        "baseUrl": "./",
        "jsx": "preserve",
        "jsxImportSource": "astro",
        "allowJs": true,
        "types": [
            "astro/client",
            "node"
        ],
        "sourceMap": false,
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "ES2020",
        "lib": [
            "esnext",
            "dom"
        ],
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleDetection": "force"
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}