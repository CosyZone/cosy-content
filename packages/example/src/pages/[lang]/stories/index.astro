---
import AppLayout from '@/layouts/AppLayout.astro';
import { CardCourse, Grid, Container } from '@coffic/cosy-ui';
import { storyRepo } from '@coffic/cosy-content';

// 这里定义了每个语言的课程列表页，并将其作为静态页面预渲染。

export const prerender = true;

export async function getStaticPaths() {
  return [
    {
      params: {
        lang: '/zh-cn',
      },
    },
    {
      params: {
        lang: '/en',
      },
    },
  ];
}

const { lang } = Astro.params;
console.log(lang);
const stories = (await storyRepo.allStoriesByLang(lang)).filter((story) =>
  story.isNotHidden()
);
const title = lang === 'zh-cn' ? '课程列表' : 'Courses List';
const description = lang === 'zh-cn' ? '课程列表' : 'Courses List';
---

<AppLayout title={title} description={description}>
  <Container size="xl">
    <Grid cols={4} gap="xs">
      {
        stories.map((course) => (
          <CardCourse title={course.getTitle()} link={course.getLink()} />
        ))
      }
    </Grid>
  </Container>
</AppLayout>
